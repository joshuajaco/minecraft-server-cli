{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "isolatedModules": true,
    "moduleDetection": "force",
    "strict": true,
    "outDir": "dist",
    "noUncheckedSideEffectImports": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["bin/**/*.ts"]
}
